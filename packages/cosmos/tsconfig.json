{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@cosmos/*": ["./*"]
    }
  },
  // Exclude files that are not part of the package
  "exclude": [
    // "node_modules",
    // "./deploy.ts",
    // "./lab.ts",
    // "./connect.ts",
    // "./seed/*.ts",
    // "./docker-compose.yml",
    // "./drizzle-config.json",
    // "./migrations/**/*"
  ]
}
